import java.io.*;
import java.nio.file.*;

public class latihand {
    
public class CopyFileBinary {
    public static void main(String[] args) {
        // Pastikan pengguna memasukkan argumen sumber dan tujuan
        if (args.length != 2) {
            System.out.println("Pemakaian: java CopyFileBinary sumber tujuan");
            return;
        }

        Path sumber = Paths.get(args[0]);
        Path tujuan = Paths.get(args[1]);

        // Coba salin file biner menggunakan stream
        try (InputStream in = Files.newInputStream(sumber);
             OutputStream out = Files.newOutputStream(tujuan)) {

            byte[] buffer = new byte[4096]; // buffer 4KB
            int panjang;
            while ((panjang = in.read(buffer)) != -1) {
                out.write(buffer, 0, panjang);
            }

            System.out.println("File berhasil disalin dari " + sumber + " ke " + tujuan);
        } catch (IOException e) {
            System.out.println("Terjadi kesalahan: " + e.getMessage());
        }
    }
}

}
